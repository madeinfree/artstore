 <div class="row">
   <div class="col-md-12">
    <h2> 訂單明細 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th class="text-center">單價</th>
          <th class="text-center">數量</th>
          <th class="text-center">價格</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td>
            <%= render_cart_item_title_for_order(order_item) %>
            <%# link_to(cart.title, product_path(cart)) %>
          </td>
          <td class="text-center"> <%= render_cart_item_price_for_order(order_item) %> </td>
          <td class="text-center"> <%= render_cart_item_quantity_for_order(order_item) %><%# cart.quantity %> </td>
          <td class="text-center"> <%= render_cart_item_total_price_for_order(order_item) %><%# (cart.price.to_i * cart.quantity.to_i) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total group">
      <span class="pull-right">
       <span> 總計 <%= @order.total %> NTD  
       </span>
     </div>
     <hr>
     <h2> 寄送資訊 </h2>
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td> 訂購人 </td>
        </tr>
        <tr>
          <td> 
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td> 訂購人 </td>
        </tr>
        <tr>
          <td> 
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <% if !@order.paid? %>
    <div class="pull-right">
      <%= link_to("以信用卡付款", pay_with_credit_card_order_path(@order.token), :class => "btn btn-primary btn-lg btn-danger ") %>
      <%= link_to("以 ATM 付款", "#", :class => "btn btn-primary btn-lg btn-danger ") %>
    </div>
    <% else %>
    此訂單已完成付款
    <% end %>
  </div>
</div>