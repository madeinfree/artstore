<div class="container">
  <div class="row">
    <h1>購物車</h1>
    <span class="pull-right"><%= link_to("清空購物車", item_clear_carts_path(), :class => "btn btn-danger btn-xs")%></span>
    <table class="table table-hover">
      <thead>
        <th>產品照片</th>
        <th>產品名稱</th>
        <th>產品單價</th>
        <th>購買數量</th>
        <th>商品總價格</th>
        <th></th>
      </thead>
    </table>
    <%= render :partial => "cart_product_index", :collection => @cart_items, :as => :cart_item %>
  </div>
  <div class="total group">
    <span class="pull-right">
    <span> 總計 <%= render_cart_total_price(current_cart) %> NTD </span>
  </div>
  <hr />
  <div class="total group">
    <span class="pull-right">
    <span> <%= link_to("立即結賬", checkout_carts_path, :class => "btn btn-danger") %> </span>
  </div>  
</div>